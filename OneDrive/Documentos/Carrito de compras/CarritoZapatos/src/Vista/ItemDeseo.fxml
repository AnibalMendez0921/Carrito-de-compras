<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="200.0" prefWidth="800.0" style="-fx-background-color: #FFE0C7; -fx-background-radius: 15; -fx-border-radius: 15;" 
           xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="Controlador.ItemDeseoController">

    <VBox alignment="TOP_CENTER">
        <AnchorPane prefHeight="90" style="-fx-background-color: white; -fx-background-radius: 15 15 0 0;">
            <ImageView fx:id="logoMarca" fitHeight="90.0" layoutX="600.0" opacity="0.2" preserveRatio="true" AnchorPane.rightAnchor="10">
                <image>
                    <Image url="@../Imagenes/logo%20tienda%20sin%20fondo.png" />
                </image>
            </ImageView>
        </AnchorPane>
        <Region prefHeight="110.0" />
    </VBox>

    <HBox alignment="TOP_LEFT" spacing="20" style="-fx-padding: 20;">
        
        <VBox alignment="TOP_CENTER" StackPane.alignment="TOP_LEFT">
            <ImageView fx:id="imagenProducto" fitHeight="140.0" fitWidth="140.0" 
                       style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);" />
        </VBox>

        <VBox prefWidth="400" spacing="8">
            <HBox spacing="10">
                <Label fx:id="nombreProducto" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="precioProducto" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </HBox>

            <Label fx:id="descripcionProducto" style="-fx-text-fill: #444; -fx-font-size: 13px;" />

            <VBox spacing="6">
                <Label style="-fx-font-size: 13px;" text="Talla deseada" />
                <FlowPane hgap="10" vgap="5">
                    <Button style="-fx-background-radius: 30; -fx-background-color: #fff;" text="36" />
                    <Button style="-fx-background-radius: 30; -fx-background-color: black; -fx-text-fill: white;" text="37" />
                    <Button style="-fx-background-radius: 30; -fx-background-color: #fff;" text="38" />
                    <Button style="-fx-background-radius: 30; -fx-background-color: #fff;" text="39" />
                    <Button style="-fx-background-radius: 30; -fx-background-color: #fff;" text="30" />
                </FlowPane>
            </VBox>

            <HBox spacing="5">
                <Label style="-fx-text-fill: #999;" text="★ ★ ★ ★ ★" />
                <Label fx:id="calificacionProducto" text="4.6" />
                <Label style="-fx-text-fill: gray; -fx-font-size: 11px;" text="Reseñas (58)" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 0 0 0;">
                <Button fx:id="moverBtn" onAction="#moverDelCarrito" prefHeight="30.0" prefWidth="120.0"
                        style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"
                        text="Mover del carrito" />
                <Button fx:id="eliminarBtn" onAction="#eliminarItem" prefHeight="30.0" prefWidth="120.0"
                        style="-fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 20; -fx-border-width: 0;"
                        text="Eliminar" />
            </HBox>
        </VBox>
    </HBox>

</StackPane>