<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="890.0" prefWidth="1332.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controlador.ListaDeseosController">

    <HBox spacing="20.0" style="-fx-background-color: #FAD2AF;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" prefHeight="80.0">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <ImageView fx:id="logoImageView" fitHeight="50.0" fitWidth="150.0">
            <image>
                <Image url="@../Imagenes/logo%20tienda%20sin%20fondo.png" />
            </image>
        </ImageView>
        <Button text="Hombre" />
        <Button text="Mujer" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Carrito de compras" />
        <Button text="Tu usuario" />
    </HBox>


    <ScrollPane fitToWidth="true" layoutX="45.0" layoutY="104.0" prefHeight="668.0" prefWidth="816.0">
        <VBox fx:id="listaItemsVBox" prefWidth="580" spacing="15" style="-fx-background-color: #FFF5EC;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </ScrollPane>


    <Button fx:id="btnRegresar" layoutX="45.0" layoutY="800.0" mnemonicParsing="false" onAction="#irAVerMas" style="-fx-background-color: transparent; -fx-cursor: hand;">
        <graphic>
            <ImageView fitHeight="39.0" fitWidth="43.0">
                <image>
                    <Image url="@../Imagenes/flecha.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

</AnchorPane>
