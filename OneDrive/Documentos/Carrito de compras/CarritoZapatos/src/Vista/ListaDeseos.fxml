<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="890.0" prefWidth="1301.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlador.ListaDeseosController">

    <HBox prefHeight="80.0" spacing="20" style="-fx-background-color: #FAD2AF;" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>

        <ImageView fitHeight="50" fitWidth="150">
            <image>
                <Image url="@../Imagenes/logo%20tienda%20sin%20fondo.png" />
            </image>
        </ImageView>

        <Button prefHeight="57.0" prefWidth="80.0" style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-cursor: hand;" text="Hombre">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>

        <Button prefHeight="55.0" prefWidth="64.0" style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-cursor: hand;" text="Mujer">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>

        <Region prefHeight="60.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />

        <Label prefHeight="60.0" prefWidth="142.0" text="Lista de deseos">
            <font>
                <Font name="Bodoni MT Bold" size="20.0" />
            </font>
        </Label>

        <Region HBox.hgrow="ALWAYS" />

        <Button prefHeight="54.0" prefWidth="181.0" style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0">
                    <image>
                        <Image url="@../Imagenes/iconoCarritonegro.png" />
                    </image>
                </ImageView>
            </graphic>
            Carrito de compras
        </Button>

        <Button prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0">
                    <image>
                        <Image url="@../Imagenes/usuario.png" />
                    </image>
                </ImageView>
            </graphic>
            Tu usuario
        </Button>
    </HBox>

    <ScrollPane fitToWidth="true" layoutX="15.0" layoutY="87.0" prefHeight="742.0" prefWidth="1266.0">
        <VBox fx:id="listaItemsVBox" prefWidth="1200.0" spacing="20" style="-fx-background-color: #FFF5EC;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </ScrollPane>

    <Button fx:id="btnRegresar" layoutX="1222.0" layoutY="829.0" style="-fx-background-color: transparent; -fx-cursor: hand;">
        <graphic>
            <ImageView fitHeight="39" fitWidth="43">
                <image>
                    <Image url="@../Imagenes/flecha.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

</AnchorPane>
