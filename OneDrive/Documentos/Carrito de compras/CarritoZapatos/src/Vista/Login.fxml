<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.BoxBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlador.LoginController">

   <children>

      <ImageView fx:id="backgroundImage" fitHeight="658.0" fitWidth="1300.0" pickOnBounds="true" preserveRatio="false">
         <image>
            <Image url="@../Imagenes/Parte%20superior%20login.png" />
         </image>
         <effect>
            <BoxBlur height="10.0" iterations="5" width="10.0" />
         </effect>
      </ImageView>

      <StackPane alignment="BOTTOM_CENTER">
         <ImageView fx:id="bottomImage" fitHeight="450.0" fitWidth="1300.0" pickOnBounds="true" preserveRatio="false">
            <image>
               <Image url="@../Imagenes/parte%20inferior%20login.png" />
            </image>
            <effect>
               <BoxBlur height="10.0" iterations="5" width="10.0" />
            </effect>
         </ImageView>
      </StackPane>

      <StackPane style="-fx-background-color: transparent;">
         <Pane maxHeight="710.0" maxWidth="813.0" prefHeight="658.0" prefWidth="813.0">
            <children>
               <StackPane layoutX="179.5" layoutY="64.0" prefHeight="312.0" prefWidth="257.0" />

               <Pane layoutX="254.0" layoutY="154.0" prefHeight="399.0" prefWidth="305.0"
                     style="-fx-border-radius: 30; -fx-background-radius: 30; -fx-background-color: rgba(255,255,255,0.4);">
                  <children>
                     <Button fx:id="roundButton" layoutX="104.0" layoutY="293.0" prefHeight="29.0" prefWidth="98.0"
                             style="-fx-border-radius: 30; -fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 30;"
                             text="Ingresar" />
                     <Label layoutX="80.0" layoutY="336.0" text="¿Aún no tienes una cuenta?" />
                     <Label layoutX="123.0" layoutY="353.0" text="¡Registrate!" />

                     <TextField layoutX="47.0" layoutY="150.0" prefHeight="41.0" prefWidth="212.0"
                                promptText="E-mail"
                                style="-fx-background-radius: 30; -fx-background-color: white; -fx-alignment: center; -fx-text-fill: #333232;" />

                     <PasswordField layoutX="47.0" layoutY="230.0" prefHeight="41.0" prefWidth="212.0"
                                    promptText="Contraseña"
                                    style="-fx-background-radius: 30; -fx-background-color: white; -fx-border-radius: 30; -fx-alignment: center; -fx-text-fill: #333232;" />

                     <Pane prefHeight="108.0" prefWidth="305.0"
                           style="-fx-background-color: white; -fx-background-radius: 30 30 0 0;">
                        <children>
                           <ImageView fitHeight="81.0" fitWidth="257.0" layoutX="21.0" layoutY="13.0"
                                      pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@../Imagenes/Zcarpe.jpg" />
                              </image>
                           </ImageView>
                           <Button layoutX="266.0" layoutY="13.0" mnemonicParsing="false"
                                   style="-fx-background-color: white; -fx-background-radius: 30 30 30 30;"
                                   text="X" textFill="#0000006d" />
                        </children>
                     </Pane>

                     <ImageView fitHeight="240.0" fitWidth="227.0" layoutX="39.0" layoutY="95.0"
                                pickOnBounds="true" preserveRatio="true" mouseTransparent="true">
                        <image>
                           <Image url="@../Imagenes/Icono%201.png" />
                        </image>
                     </ImageView>

                  </children>
               </Pane>

            </children>
         </Pane>
      </StackPane>

   </children>
</StackPane>
